<?xml version="1.0"?>
<Content xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Object id="gxui.Accordion">
    <Group>
      <Name>General</Name>
      <Type>Main</Type>
      <Children>
        <Prop>
          <Id>Width</Id>
          <Name>Width</Name>
          <Type>Text</Type>
          <Default>300</Default>
          <Metadata />
        </Prop>
        <Prop>
          <Id>Height</Id>
          <Name>Height</Name>
          <Type>Text</Type>
          <Default>400</Default>
          <Metadata />
        </Prop>
        <Prop>
          <Id>Panels</Id>
          <Name>Panels</Name>
          <Type>Text</Type>
          <Metadata>
            <Value name='FlagVisible'>false</Value>
          </Metadata>
        </Prop>
        <Group>
          <Name>Behavior</Name>
          <Children>
            <Prop>
              <Id>FitHeight</Id>
              <Name>FitHeight</Name>
              <Type>Combo</Type>
              <Default>true</Default>
              <Metadata />
              <Values>
                <Value id="true" desc="True" />
                <Value id="false" desc="False" />
              </Values>
              <Description>Set to true if you use fixed height dock.</Description>
            </Prop>
            <Prop>
              <Id>Draggable</Id>
              <Name>Draggable</Name>
              <Type>Combo</Type>
              <Default>true</Default>
              <Metadata />
              <Values>
                <Value id="true" desc="True" />
                <Value id="false" desc="False" />
              </Values>
              <Description>Set to false to disallow panels dragging.</Description>
            </Prop>
		    <Prop>
		      <Id>DragDropGroup</Id>
		      <Name>DragDropGroup</Name>
		      <Type>Text</Type>
		      <Default>accordion</Default>
		      <Metadata />
              <Description>Drag drop group name. Panels can be dragged from and dropped in accordions with the same group name.</Description>
		    </Prop>
            <Prop>
              <Id>ForceOrder</Id>
              <Name>ForceOrder</Name>
              <Type>Combo</Type>
              <Default>false</Default>
              <Metadata />
              <Values>
                <Value id="true" desc="True" />
                <Value id="false" desc="False" />
              </Values>
              <Description>Set to true to disable reordering of panels.</Description>
            </Prop>
            <Prop>
              <Id>Independent</Id>
              <Name>Independent</Name>
              <Type>Combo</Type>
              <Default>false</Default>
              <Metadata />
              <Values>
                <Value id="true" desc="True" />
                <Value id="false" desc="False" />
              </Values>
              <Description>Set to true to make panels independent.</Description>
            </Prop>
            <Prop>
              <Id>KeepState</Id>
              <Name>KeepState</Name>
              <Type>Combo</Type>
              <Default>true</Default>
              <Metadata />
              <Values>
                <Value id="true" desc="True" />
                <Value id="false" desc="False" />
              </Values>
              <Description>Set to false to exclude this accordion from state management.</Description>
            </Prop>
          </Children>
        </Group>
      </Children>
    </Group>
  </Object>
</Content>